<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="indicator">
            <flag name="BallClipRotate" value="2" />
        </attr>
        <attr name="indicator_color" format="color" />
    </declare-styleable>

    <!-- *****************************听说作业开始********************************************** -->

    <declare-styleable name="MaterialLayout">
        <attr name="alpha" format="integer" />
        <attr name="alpha_step" format="integer" />
        <attr name="framerate" format="integer" />
        <attr name="duration" format="integer" />
        <attr name="layout_color" format="color" />
        <attr name="scale" format="float" />
    </declare-styleable>
    <declare-styleable name="helloGallery">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>
    <declare-styleable name="WhiteBordView">
        <attr name="border" format="integer" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 设置图片角度 -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <declare-styleable name="LinearListView">
        <attr name="android:entries" />
        <attr name="dividerThickness" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="isOpened" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LD_WaveView">
        <attr name="wave_color" format="color"></attr>
        <attr name="wave_circle" format="boolean"></attr>
    </declare-styleable>

    <!-- jazzviewpager -->

    <declare-styleable name="JazzyViewPager">
        <attr name="jazzy_style">
            <enum name="standard" value="0" />
            <enum name="tablet" value="1" />
            <enum name="cubein" value="2" />
            <enum name="cubeout" value="3" />
            <enum name="flipvertical" value="4" />
            <enum name="fliphorizontal" value="5" />
            <enum name="stack" value="6" />
            <enum name="zoomin" value="7" />
            <enum name="zoomout" value="8" />
            <enum name="rotateup" value="9" />
            <enum name="rotatedown" value="10" />
            <enum name="accordion" value="11" />
        </attr>
        <attr name="fadeEnabled" format="boolean" />
        <attr name="outlineEnabled" format="boolean" />
        <attr name="outlineColor" format="color|reference" />
    </declare-styleable>
    <!-- 圆角 ImageView -->
    <declare-styleable name="FrescoImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <!-- *****************************听说作业结束********************************************** -->

    <declare-styleable name="RoundProgressBar">
        <attr name="SroundColor" format="color" />
        <attr name="SroundProgressColor" format="color" />
        <attr name="SprogressRoundWidth" format="dimension"></attr>
        <attr name="StextColor" format="color" />
        <attr name="StextSize" format="dimension" />
        <attr name="Smax" format="integer"></attr>
        <attr name="StextIsDisplayable" format="boolean"></attr>
        <attr name="Sstyle">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

</resources>