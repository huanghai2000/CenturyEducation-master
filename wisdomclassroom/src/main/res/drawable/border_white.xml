<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
     <item>
        <shape>
            <solid
                android:width="1dp"
                android:color="@color/line_color_gray" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                 /> 
        </shape>
    </item> 

    <!-- 主体背景颜色值 -->
    <item 
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:top="1dp"
        >
        <shape>
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                 /> 
             <padding 
                android:left="5dip"
                android:top="2dip"
                android:right="5dip"
                android:bottom="2dip"
                />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>