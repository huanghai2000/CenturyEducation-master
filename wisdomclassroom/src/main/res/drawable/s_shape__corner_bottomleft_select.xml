<?xml version="1.0" encoding="UTF-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#4BD2F3" />
            <stroke
                android:width="1dp"
                android:color="#ffffff"  />
               <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomRightRadius="0dp" android:bottomLeftRadius="7dp" />
            <stroke android:width="0dp" android:color="#ffa8abad" />
        </shape>
        
    </item>
    <item
        android:left="0dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="#4BD2F3" />
               <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomRightRadius="0dp" android:bottomLeftRadius="7dp" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>